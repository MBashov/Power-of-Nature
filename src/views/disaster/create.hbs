{{setTitle 'Create Page'}}
<section id="create-container">
    <div class="create-container-info">
        <h1>Create Event</h1>
        <form method="POST">
            <label>Name of the Disaster:</label>
            <input type="text" id="name" name="name" placeholder="..." value="{{eventData.name}}">
            <label>Type of Disaster:</label>
            <select id="type" name="disasterType">
                {{>types}}
            </select>
            <label>Year of the Event:</label>
            <input type="number" id="year" name="year" placeholder="..." value="{{eventData.year}}">
            <label>Location:</label>
            <input type="text" id="location" name="location" placeholder="..." value="{{eventData.location}}">
            <label>Image:</label>
            <input type="text" id="image" name="image" placeholder="http://..." value="{{eventData.image}}">
            <label>Description:</label>
            <textarea id="description" name="description" placeholder="...">{{eventData.description}}</textarea> 
            <input type="submit" id="btn" value="Submit"></input>
        </form>
    </div>
</section>
{{setTitle 'Details Page'}}
<section id="details-info">
    <h1>Details</h1>
    <div class="image">
        <img src="{{event.image}}">
    </div>

    <div class="info">
        <div class="text">
            <h1 id="name">{{event.name}}</h1>
            <h3 id="location">Location: {{event.location}}</h3>
            <p id="type">Type: {{event.disasterType}}</p>
            <p id="year"><span>Year of the Event: {{event.year}}</span></p>
            <p id="interested">Interested: {{event.interestedList.length}}</p>
            <p id="description">{{event.description}}
            </p>
        </div>
        {{#if user}}
        <div class="product-btn">
            {{#if owner}}
            <div class="author">
                <a href="/events/{{event._id}}/edit" class="btn-edit">Edit</a>
                <a href="/events/{{event._id}}/delete" class="btn-delete">Delete</a>
            </div>
            {{else if isInterested}}
            <p class="interested-message">You've already been interested in this event!</p>
            {{else}}
            <a href="/events/{{event._id}}/interest" class="btn-interested">Interested</a>
            {{/if}}
        </div>
        {{/if}}
    </div>
</section>